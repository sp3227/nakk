<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|left">

            <TextView
                android:id="@+id/tab3_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2014.02.23 12:04:01"
                android:textSize="10dp"
                android:textStyle="italic"
                android:textColor="#afafaf"/>

            <TextView
                android:id="@+id/tab3_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배스잡으러 가볼까?"
                android:textSize="17dp"
                android:textStyle="bold|italic"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout

            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab3_item_img"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tab3_item_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                android:textSize="13dp"
                android:lineSpacingExtra="5dp"
                android:text="날도 좋은데 배스나 잡으러 가보자!. 과연 둘은 한마리라도 잡을것인가?!"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>