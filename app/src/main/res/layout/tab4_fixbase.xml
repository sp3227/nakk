<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#191919">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="기본 설정"
            android:textColor="#00fef6"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#6a6969">

    </LinearLayout>

    <LinearLayout
        android:onClick="tab4_setting_fixprofile"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center|left"
        android:background="#3a3a3a">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_tab4"/>

        <TextView
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="푸시 알림 받기 "
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center|left"
            android:textColor="#FFFFFF"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/tab4_fixbase_push"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:checked="true"
            android:layout_height="match_parent" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:onClick="tab4_fixbase_signout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center|left"
        android:background="#3a3a3a">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_tab4"/>

        <TextView
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="회원 탈퇴하기 "
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center|left"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="(모든 데이터가 삭제 됩니다.)"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:gravity="center|left"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:onClick="tab4_fixbase_agee1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center|left"
        android:background="#3a3a3a">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_tab4"/>

        <TextView
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="낚중일기 이용약관 "
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center|left"
            android:textColor="#FFFFFF"/>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:onClick="tab4_fixbase_agee2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center|left"
        android:background="#3a3a3a">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_tab4"/>

        <TextView
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="낚중일기 위치정보 이용약관 "
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:gravity="center|left"
            android:textColor="#FFFFFF"/>



    </LinearLayout>

</LinearLayout>