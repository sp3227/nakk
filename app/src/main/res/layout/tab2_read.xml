<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="#191919">

        <TextView
            android:id="@+id/tab2_write_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="포인트 기록"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:textColor="#00fff4"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:onClick="tab2_btn_mentopen"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/icon_ment"
                                android:id="@+id/imageView" />

                            <TextView
                                android:id="@+id/tab2_ment_num"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="5 "
                                android:textStyle="italic"
                                android:textSize="18dp"
                                android:textColor="#777777"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/tab2_read_point_img"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tab2_read_point_time"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_sora"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="17dp"
                        android:textStyle="bold|italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tab2_read_point_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/colorSora"
                        android:textSize="19dp"
                        android:textStyle="bold|italic" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:background="@drawable/input_gray_round">

                <TextView
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:text="필드상황 "
                    android:textStyle="italic|bold"
                    android:gravity="top|left" />

                <TextView
                    android:id="@+id/tab2_read_point_datafield"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text=""
                    android:textStyle="italic"
                    android:gravity="top|left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:background="@drawable/input_gray_round">

                <TextView
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:text="채비정보 "
                    android:textStyle="italic|bold"
                    android:gravity="top|left" />

                <TextView
                    android:id="@+id/tab2_read_point_datapreparation"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text=""
                    android:textStyle="italic"
                    android:gravity="top|left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:background="@drawable/input_gray_round">

                <TextView
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:text="부가설명 "
                    android:textStyle="italic|bold"
                    android:gravity="top|left"
                    android:id="@+id/textView" />

                <TextView
                    android:id="@+id/tab2_read_point_dataetc"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text=""
                    android:textStyle="italic"
                    android:gravity="top|left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/tab2_read_fix_lin"
                    android:onClick="tab2_btn_read_fix"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_blackound3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="수정"
                        android:textStyle="bold|italic"
                        android:textSize="17dp"
                        android:textColor="@color/colorSora"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/tab2_read_delete_lin"
                    android:onClick="tab2_btn_read_delete"
                    android:layout_marginLeft="30dp"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_blackound3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="삭제"
                        android:textStyle="bold|italic"
                        android:textSize="17dp"
                        android:textColor="@color/colorSora"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>